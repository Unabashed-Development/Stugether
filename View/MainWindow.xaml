<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Matches">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="ChatUsers" Margin="0,0,380,0">
                        <ListBoxItem Cursor="Hand" Height="64">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/image (4).jpg"/>
                                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                                    <TextBlock Text="Liesbeth Van Goch (1)" FontSize="18" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="NoWrap" Text="(10:24): Hoi" FontSize="14" Width="300"/>
                                </StackPanel>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Cursor="Hand" Height="64">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/image (3).jpg"/>
                                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                                    <TextBlock Text="Erik Oldenzaan (2)" FontSize="18" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="NoWrap" Text="(07:11): IK HEB WISKUNDE OOK ALS INTRESSE!!!!!! xD LoL HAHAhahahahahaHAhhahHa" VerticalAlignment="Stretch" Width="300" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Cursor="Hand" Height="64">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/image (2).jpg"/>
                                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                                    <TextBlock Text="Fleur van Orangje" FontSize="18" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="NoWrap" Text="SM: Jullie zijn gemachted op 22 november! Start als eerste het gesprek!" FontSize="14" Width="300"/>

                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Cursor="Hand" Height="64">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/image (1).jpg"/>
                                <StackPanel Orientation="Vertical" Margin="8,0,0,0">
                                    <TextBlock Text="Jan Versteegh (1)" FontSize="18" FontWeight="Bold"/>
                                    <TextBlock TextWrapping="NoWrap" Text="(02-10-2019 @ 23:18): Yo Fakka broer man neef!!11!" FontSize="14" Width="300"/>
                                </StackPanel>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Image HorizontalAlignment="Left" Height="187" Margin="-92,-72,0,0" VerticalAlignment="Top" Width="1386" Source="/image (1).jpg" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="-0.535"/>
                                <RotateTransform/>
                                <TranslateTransform X="-0.991"/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
